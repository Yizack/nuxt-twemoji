{
  "name": "nuxt-twemoji",
  "version": "4.0.0",
  "description": "Twemoji module for Nuxt. Render emojis as SVG elements or PNG images",
  "keywords": [
    "nuxt",
    "twemoji",
    "emoji",
    "emojis",
    "nuxt3",
    "twitter-emoji"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yizack/nuxt-twemoji.git"
  },
  "homepage": "https://github.com/Yizack/nuxt-twemoji",
  "author": {
    "name": "Yizack Rangel",
    "email": "yizackr@gmail.com",
    "url": "https://yizack.com"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    },
    "./emojis": {
      "types": "./dist/runtime/assets/emojis.d.ts",
      "import": "./dist/runtime/assets/emojis.js"
    }
  },
  "main": "./dist/module.mjs",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types.d.mts"
      ],
      "emojis": [
        "./dist/runtime/assets/emojis.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxt-module-build build",
    "prepack": "pnpm build",
    "dev": "pnpm dev:prepare && nuxt dev playground",
    "dev:build": "nuxt build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxt prepare playground",
    "release": "pnpm lint && pnpm build && pnpm test && changelogen --release && git push --follow-tags",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run --reporter=verbose",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc -b --noEmit",
    "emojis": "jiti ./scripts/generateEmojis && pnpm lint:fix"
  },
  "dependencies": {
    "@nuxt/kit": "^4.3.0",
    "@twemoji/api": "^17.0.2",
    "@twemoji/parser": "^17.0.1",
    "defu": "^6.1.4"
  },
  "devDependencies": {
    "@nuxt/devtools": "^3.1.1",
    "@nuxt/eslint-config": "^1.13.0",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.3.0",
    "@nuxt/test-utils": "^3.23.0",
    "@types/node": "^25.1.0",
    "changelogen": "^0.6.2",
    "eslint": "^9.39.2",
    "nuxt": "^4.3.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.2.4"
  },
  "packageManager": "pnpm@10.28.2"
}
